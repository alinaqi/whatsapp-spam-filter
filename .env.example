# Anthropic API Key (OPTIONAL - enables AI-powered detection)
# Without this, the bot uses rule-based detection only
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Dry run mode - set to "true" to test without deleting messages
DRY_RUN=true

# Enable AI detection - set to "false" to use only rule-based detection
# (automatically disabled if no API key is provided)
USE_AI=true

# Optional: Comma-separated list of group IDs to monitor
# Leave empty to monitor ALL groups where bot is admin
# Get group IDs from console logs when the bot starts
MONITORED_GROUPS=

# Optional: Comma-separated list of keywords that auto-trigger spam detection
# These bypass all other checks for instant detection
SPAM_KEYWORDS=crypto,forex,investment opportunity,earn money fast
